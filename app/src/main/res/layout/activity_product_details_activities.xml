<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Product_Details_Activities">

    <RelativeLayout
        android:id="@+id/product_image_card_details"
        android:layout_width="match_parent"
        android:layout_height="436dp">

        <ImageView
            android:id="@+id/details_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
           />

        <TextView
            android:id="@+id/details_product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:text="@string/product_details"
            android:fontFamily="@font/zen_old_mincho"
            android:textColor="@color/black"
            android:textSize="25dp" />


        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/like_gray_backround"
            android:padding="10dp"
            android:src="@drawable/fill_heart" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/details_goBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/like_gray_backround"
            android:padding="7dp"
            android:src="@drawable/arrow_left" />



    </RelativeLayout>
<TextView
    android:id="@+id/clothe_type_txt"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/product_image_card_details"
    android:text="@string/colthes_type_txt"
    android:fontFamily="@font/zen_old_mincho"
    android:textSize="25sp"
    android:layout_marginTop="10dp"
    android:textColor="@color/black"
    android:textStyle="bold"
    android:layout_marginStart="10dp"/>

    <TextView
        android:id="@+id/clothe_type"
        android:layout_width="95dp"
        android:layout_height="40dp"
        android:layout_below="@+id/product_image_card_details"
        android:layout_marginStart="3dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/zen_old_mincho"
        android:layout_toRightOf="@+id/clothe_type_txt"
        android:gravity="center"

        android:textSize="20dip" />
    <TextView
        android:id="@+id/product_description_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/clothe_type_txt"
        android:text="@string/prouct_Des_txt"
        android:textSize="25sp"
        android:fontFamily="@font/zen_old_mincho"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:layout_marginStart="10dp"/>

 />

    <TextView
        android:id="@+id/product_description"
        android:layout_width="369dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/product_description_txt"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="3dp"
        android:padding="5dp"
        android:fontFamily="@font/zen_old_mincho"
        android:textSize="20sp"
        android:lineSpacingExtra="3dp"
       />




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="104dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:elevation="10dp">

        <TextView
            android:id="@+id/total_price_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:text="@string/total_text"
            android:fontFamily="@font/zen_old_mincho"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/total_price"
            android:layout_width="119dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/total_price_text"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/zen_old_mincho"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:drawableRight="@drawable/dollar"
            android:drawablePadding="3dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/add_teo_card_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:background="@drawable/brow_btn_backround"
            android:drawableLeft="@drawable/add_to_carts"
            android:drawablePadding="10dp"
            android:text="@string/add_to_card_txt"
            android:fontFamily="@font/zen_old_mincho"
            android:textColor="@color/white"
            android:paddingStart="7dp"
            android:paddingEnd="7dp"
            android:textStyle="bold" />
    </RelativeLayout>



</RelativeLayout>